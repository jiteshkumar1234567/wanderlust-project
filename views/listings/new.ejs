<% layout("/layouts/boilerplate") %>
 
    <div class="row mt-3">
      <div class="col-8 offset-2">
      
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mt-3">
        <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Enter Title" type="text" id="validationCustom01" class="form-control" required/>
   
   <div class="invalid-feedback">
        Please Enter Title.
      </div>
 <div class="valid-feedback">
      Looks good!
    </div>
      </div>
      
     

      <div class="mt-3">
    <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Enter description" class="form-control" required
      ></textarea>

        <div class="invalid-feedback">
        Please Enter Description.
      </div>
 <div class="valid-feedback">
      Looks good!
    </div>
      </div>
    
     
             <div class="mt-3">
     <label for="image" class="form-label">Upload Image (Min: 50MB)</label>
      <input
        name="listing[image]"
        type="file" class="form-control"
        required
      />

 <div class="valid-feedback">
      Looks good!
    </div>
      </div>
      
      
<div class="row mt-3">
      <div class="col-md-4 mt-3">
  <label for="price" class="form-label">Price</label>
      <input name="listing[price]" placeholder="1500" type="number" class="form-control" required/>

        <div class="invalid-feedback">
        Please Enter Price.
      </div>
 <div class="valid-feedback">
      Looks good!
    </div>
      </div>
      
      

      <div class="col-md-8 mt-3">
 <label for="country" class="form-label">Country</label>
      <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>

        <div class="invalid-feedback">
        Please Enter Country.
      </div>
 <div class="valid-feedback">
      Looks good!
    </div>
      </div></div>
       
<div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select name="listing[category]" id="category" class="form-select">
    <option value="">Select Category</option>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Cities">Cities</option>
    <option value="Mountain">Mountain</option>
    <option value="Mountain">Castles</option>
    <option value="Mountain">Pools</option>
    <option value="Mountain">Lakes</option>
    <option value="Mountain">Beach</option>
    <option value="Mountain">Camping</option>
    <option value="Mountain">Domes</option>
    <option value="Mountain">Arictic</option>
    <option value="Mountain">Boats</option>
  </select>
</div>



       <div class="mt-3">
  <label for="location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="Jaipur,Rajasthan"
        type="text" class="form-control" required
      />

        <div class="invalid-feedback">
        Please Enter Location.
      </div>
 <div class="valid-feedback">
      Looks good!
    </div>
      </div>
      
    <div class="col-12 mt-3">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
      <label class="form-check-label" for="invalidCheck">
        Agree to terms and conditions
      </label>
      <div class="invalid-feedback">
        You must agree before submitting.
      </div>
    </div>
  </div>

      <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
  </div> </div>

  </body>
</html>
