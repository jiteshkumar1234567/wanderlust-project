<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
  <div class="col-10 offset-1">

    <div class="card shadow-lg border-0">
      <div class="card-body p-5">
        <h2 class="card-title mb-4 text-center">Create a New Listing</h2>
        
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-4">
            <label for="title" class="form-label fw-bold">Title <i class="bi bi-card-text"></i></label>
            <input name="listing[title]" type="text" id="title" class="form-control form-control-lg" placeholder="Enter Title" required>
            <div class="invalid-feedback">Please enter a title.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-4">
            <label for="description" class="form-label fw-bold">Description <i class="bi bi-pencil-square"></i></label>
            <textarea name="listing[description]" id="description" class="form-control form-control-lg" rows="4" placeholder="Enter description" required></textarea>
            <div class="invalid-feedback">Please enter a description.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Image Upload -->
          <div class="mb-4">
            <label for="image" class="form-label fw-bold">Upload Image (Min: 50MB) <i class="bi bi-image"></i></label>
            <input name="listing[image]" type="file" class="form-control form-control-lg" required>
            <div class="invalid-feedback">Please upload an image.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Price and Country -->
          <div class="row mb-4">
            <div class="col-md-4">
              <label for="price" class="form-label fw-bold">Price <i class="bi bi-currency-dollar"></i></label>
              <input name="listing[price]" type="number" class="form-control form-control-lg" placeholder="1500" required>
              <div class="invalid-feedback">Please enter a price.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="col-md-8">
              <label for="country" class="form-label fw-bold">Country <i class="bi bi-geo-alt"></i></label>
              <input name="listing[country]" type="text" class="form-control form-control-lg" placeholder="India" required>
              <div class="invalid-feedback">Please enter country.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
          </div>

          <!-- Category -->
          <div class="mb-4">
            <label for="category" class="form-label fw-bold">Category <i class="bi bi-tags"></i></label>
            <select name="listing[category]" id="category" class="form-select form-select-lg" required>
              <option value="">Select Category</option>
              <option value="Trending">Trending</option>
              <option value="Rooms">Rooms</option>
              <option value="Cities">Cities</option>
              <option value="Mountain">Mountain</option>
              <option value="Castles">Castles</option>
              <option value="Pools">Pools</option>
              <option value="Lakes">Lakes</option>
              <option value="Beach">Beach</option>
              <option value="Camping">Camping</option>
              <option value="Domes">Domes</option>
              <option value="Arctic">Arctic</option>
              <option value="Boats">Boats</option>
            </select>
            <div class="invalid-feedback">Please select a category.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Location -->
          <div class="mb-4">
            <label for="location" class="form-label fw-bold">Location <i class="bi bi-geo"></i></label>
            <input name="listing[location]" type="text" class="form-control form-control-lg" placeholder="Jaipur, Rajasthan" required>
            <div class="invalid-feedback">Please enter a location.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Terms Checkbox -->
          <div class="mb-4 form-check">
            <input class="form-check-input" type="checkbox" id="terms" required>
            <label class="form-check-label fw-bold" for="terms">Agree to terms and conditions</label>
            <div class="invalid-feedback">You must agree before submitting.</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-dark btn-lg shadow-sm">Add Listing <i class="bi bi-plus-circle"></i></button>
          </div>

        </form>
      </div>
    </div>

  </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- Optional JS for validation -->
<script>
  // Bootstrap 5 validation
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>
