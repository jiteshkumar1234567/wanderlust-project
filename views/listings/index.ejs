
<% layout("/layouts/boilerplate") %>

<style>
  /* Filters  */
#filters-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between; /* filters left, toggle right */
    align-items: center;
    margin-top: 2rem;     
    margin-bottom: 2rem;
    gap: 1rem;
}


  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .filter {
    text-align: center;
    width: 90px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .filter a {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    padding: 10px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    color: #222;
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
  }

  .filter a:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }

  .filter i {
    font-size: 1.5rem;
    margin-bottom: 5px;
    color: #ff6b6b;
  }

  .filter p {
    margin: 0;
    font-size: 0.85rem;
  }


  /* Listings Cards */
  .card {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: #fff;
  }
  .card:hover {
    transform: translateY(-7px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.25);
  }
  .card-img-top {
    height: 20rem;
    object-fit: cover;
  }
  .card-body h5 {
    font-weight: 700;
    font-size: 1.1rem;
    color: #222;
  }
  .card-body p {
    color: #555;
    font-size: 0.95rem;
  }
  .card-body a.btn {
    border-radius: 50px;
    padding: 7px 20px;
    font-weight: 600;
    transition: transform 0.2s ease;
  }
  .card-body a.btn:hover {
    transform: translateY(-2px);
  }
  .tax-info {
    font-size: 0.8rem;
    color: #888;
  }
</style>

<!-- Filters -->
<div id="filters-container">
  <div id="filters">
      <div class="filter">
    <a href="/listings/category/Trending">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Rooms">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Cities">
      <i class="fa-solid fa-building-user"></i>
      <p>Cities</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Mountain">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Mountain</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Castles">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Pools">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Lakes">
      <i class="fa-solid fa-water"></i>
      <p>Lakes</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Beach">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Camping">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Domes">
      <i class="fa-solid fa-igloo"></i>
      <p>Domes</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Arictic">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arictic</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Boats">
      <i class="fa-solid fa-ship"></i>
      <p>Boats</p>
    </a>
  </div></div>


</div>

<!-- Listings -->
<div class="row row-cols-1 row-cols-md-3 g-4 mt-1 mb-5">
  <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100">
        <a href="/listings/<%= listing._id %>">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p><strong>Price:</strong> &#8377;<b><%= listing.price.toLocaleString("en-IN")  %>/night  <i>&nbsp; &nbsp; +18% GST</i> </b>

          </p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-premium">View Details</a>
        </div>
      </div>
    </div>
  <% } %>
</div>

