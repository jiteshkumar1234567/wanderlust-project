<% layout("/layouts/boilerplate") %>

<style>
/* =======================
   FILTERS SECTION
======================= */
#filters-container {
  display: flex;
  align-items: center;
  margin: 2rem 0;
  width: 100%;
}

#filters {
  display: flex;
  gap: 1rem;
  overflow-x: auto;
  padding-bottom: 10px;
  scrollbar-width: none;
}
#filters::-webkit-scrollbar {
  display: none;
}

.filter {
  min-width: 85px;
  text-align: center;
  flex-shrink: 0;
}

.filter a {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 10px;
  border-radius: 14px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  color: #222;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.filter a:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
}

.filter i {
  font-size: 1.4rem;
  margin-bottom: 4px;
  color: #ff6b6b;
}

.filter p {
  margin: 0;
  font-size: 0.8rem;
}

/* =======================
   LISTING CARDS
======================= */
.card {
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  transition: all 0.3s ease;
  background: #fff;
}

.card:hover {
  transform: translateY(-7px);
  box-shadow: 0 15px 35px rgba(0,0,0,0.25);
}

.card-img-top {
  width: 100%;
  height: 260px;
  object-fit: cover;
}

.card-body h5 {
  font-weight: 700;
  font-size: 1.1rem;
  color: #222;
}

.card-body p {
  color: #555;
  font-size: 0.9rem;
}

.card-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-body a.btn {
  border-radius: 50px;
  padding: 7px 20px;
  font-weight: 600;
}

/* =======================
   RESPONSIVE BREAKPOINTS
======================= */
@media (max-width: 768px) {
  .card-img-top {
    height: 220px;
  }
}

@media (max-width: 576px) {
  .card-img-top {
    height: 200px;
  }
  .card-body h5 {
    font-size: 1rem;
  }
  .filter {
    min-width: 75px;
  }
}
</style>

<!-- =======================
     FILTERS
======================= -->
<div id="filters-container">
  <div id="filters">
    <div class="filter"><a href="/listings/category/Trending"><i class="fa-solid fa-fire"></i><p>Trending</p></a></div>
    <div class="filter"><a href="/listings/category/Rooms"><i class="fa-solid fa-bed"></i><p>Rooms</p></a></div>
    <div class="filter"><a href="/listings/category/Cities"><i class="fa-solid fa-building-user"></i><p>Cities</p></a></div>
    <div class="filter"><a href="/listings/category/Mountain"><i class="fa-solid fa-mountain-city"></i><p>Mountain</p></a></div>
    <div class="filter"><a href="/listings/category/Castles"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></a></div>
    <div class="filter"><a href="/listings/category/Pools"><i class="fa-solid fa-person-swimming"></i><p>Pools</p></a></div>
    <div class="filter"><a href="/listings/category/Lakes"><i class="fa-solid fa-water"></i><p>Lakes</p></a></div>
    <div class="filter"><a href="/listings/category/Beach"><i class="fa-solid fa-umbrella-beach"></i><p>Beach</p></a></div>
    <div class="filter"><a href="/listings/category/Camping"><i class="fa-solid fa-campground"></i><p>Camping</p></a></div>
    <div class="filter"><a href="/listings/category/Domes"><i class="fa-solid fa-igloo"></i><p>Domes</p></a></div>
    <div class="filter"><a href="/listings/category/Arictic"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></a></div>
    <div class="filter"><a href="/listings/category/Boats"><i class="fa-solid fa-ship"></i><p>Boats</p></a></div>
  </div>
</div>

<!-- =======================
     LISTINGS
======================= -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mb-5">
  <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100">
        <a href="/listings/<%= listing._id %>">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
        </a>
        <div class="card-body">
          <h5><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p>
            <strong>â‚¹ <%= listing.price.toLocaleString("en-IN") %></strong> / night  
            <small class="text-muted">+18% GST</small>
          </p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary w-100">
            View Details
          </a>
        </div>
      </div>
    </div>
  <% } %>
</div>
